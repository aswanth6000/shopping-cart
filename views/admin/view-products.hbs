<section>
    <div class="container">
        <div class="row mt-5 mb-2">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table mt-7">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <tr>{{#each products}}
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
       <td><img style="width: 50px;height: 50px;" src="/public/product-images/{{this._id}}.jpg" alt="image"></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>