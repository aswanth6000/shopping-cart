<div class="container">
  

<h1 style="margin-left:5%">Edit product </h1>
  <div class="form-group  col-md-6 ml-2">

<form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">


    <label for="formGroupExampleInput">Name</label>
    <input type="text" name="Name" class="form-control" id="formGroupExampleInput" placeholder="Example input" value="{{product.Name}}">
  
    <label for="formGroupExampleInput2">Price</label>
    <input type="text" name="Price" class="form-control" id="formGroupExampleInput2" placeholder="Another input" value="{{product.Price}}">


    <label for="formGroupExampleInput2">Description</label>
    <input type="text" name="Description" class="form-control" id="formGroupExampleInput2" placeholder="Another input" value="{{product.Description}}">

    <label for="exampleFormControlFile1">Image</label>
    <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px; height:auto;margin:10px" id="imgView">
    <input type="file" name="Image" class="form-control-file" id="exampleFormControlFile1" onchange="viewImg(event)">


  <button type="submit" class="btn btn-success">Submit</button>
  </form>
  </div>
  </div>

<style>
    .comtainer{
        display: flex;
        justify-content: center;
    }
    .btn{
        margin-left: 40%;
    }
</style>
<script>
    function viewImg(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>